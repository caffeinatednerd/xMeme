<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>XMeme</title>
    <link rel="icon" href="images/meme-icon.svg">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="js/materialize.min.js"></script>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body class="#f9fbe7 lime lighten-5">

    <h1> X Meme </h1>
    <div class="created">
      by <a href="https://www.linkedin.com/in/caffeinatednerd">caffeinatedNerd</a>
    </div>

    <div class="row">
      <form class="col s12" action="/memes" method="post">

        <div class="row">
          <div class="input-field col offset-s2 s8">
            <input type="text" name="name" placeholder="Enter your full name" class="validate" required>
            <label>Full Name</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col offset-s2 s8">
            <input type="text" name="caption" placeholder="Be creative with the caption" class="validate" required>
            <label>Caption</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col offset-s2 s6">
            <!-- <input type="url" pattern="https?://.+" name="url" placeholder="Enter URL of your meme here" class="validate" required> -->
            <input type="url" pattern="[Hh][Tt][Tt][Pp][Ss]?:\/\/(?:(?:[a-zA-Z\u00a1-\uffff0-9]+-?)*[a-zA-Z\u00a1-\uffff0-9]+)(?:\.(?:[a-zA-Z\u00a1-\uffff0-9]+-?)*[a-zA-Z\u00a1-\uffff0-9]+)*(?:\.(?:[a-zA-Z\u00a1-\uffff]{2,}))(?::\d{2,5})?(?:\/[^\s]*)?"
            name="url" placeholder="Enter URL of your meme here" class="validate" required>
            <label>URL</label>
            <span class="helper-text" data-error="Please enter a valid meme url" data-success=""></span>
          </div>
          <div class="input-field col s4">
            <button class="btn waves-effect waves-light" type="submit" name="button">
              <i class="material-icons right">Submit Meme</i>
            </button>
          </div>
        </div>
      </form>
    </div>



    <div class="container">
      <div class="row">

        <% for(var i=0; i<newListItems.length; i++) { %>
        <!-- Card -->
        <div class="col s12 m6 l4">
          <div class="card">
            <!-- Card Content -->
            <div class="card-image waves-effect waves-block waves-light">
              <!-- <img class="responsive-img" src="<%= newListItems[i].url %>"> -->
              <img src="<%= newListItems[i].url %>">
            </div>
            <div class="card-content">
              <span class="card-title grey-text text-darken-4"><%= newListItems[i].name %></span>
              <p><%= newListItems[i].caption %></p>
            </div>

          </div>
        </div>
        <% } %>

      </div>
    </div>

  </body>
</html>
